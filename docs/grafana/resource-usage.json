{
  "dashboard": {
    "title": "Auralis Resource Utilization",
    "description": "Monitor CPU, GPU, memory, and GC performance for real-time audio streaming (Task T096 [US3])",
    "tags": ["auralis", "performance", "resource-monitoring"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Synthesis Latency (P99)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(auralis_synthesis_latency_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99 Latency",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(auralis_synthesis_latency_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95 Latency",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency", "show": true},
          {"show": false}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [100], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "High Synthesis Latency"
        }
      },
      {
        "id": 2,
        "title": "Memory Usage (RSS)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "auralis_memory_usage_mb{type='rss'}",
            "legendFormat": "RSS Memory",
            "refId": "A"
          },
          {
            "expr": "auralis_memory_usage_mb{type='python'}",
            "legendFormat": "Python Memory",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "Memory", "show": true},
          {"show": false}
        ],
        "seriesOverrides": [
          {"alias": "RSS Memory", "color": "#73BF69"},
          {"alias": "Python Memory", "color": "#F2CC0C"}
        ]
      },
      {
        "id": 3,
        "title": "GPU Memory (CUDA/Metal)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "auralis_gpu_memory_allocated_mb",
            "legendFormat": "{{device}} Allocated",
            "refId": "A"
          },
          {
            "expr": "auralis_gpu_memory_reserved_mb{device='cuda'}",
            "legendFormat": "CUDA Reserved",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "GPU Memory", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "CPU Utilization",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "auralis_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU", "max": 100, "show": true},
          {"show": false}
        ],
        "thresholds": [
          {"value": 80, "colorMode": "critical", "op": "gt"}
        ]
      },
      {
        "id": 5,
        "title": "GC Collections Rate (Gen-0, Gen-1, Gen-2)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(auralis_gc_collections_total{generation='0'}[5m])",
            "legendFormat": "Gen-0 (Minor)",
            "refId": "A"
          },
          {
            "expr": "rate(auralis_gc_collections_total{generation='1'}[5m])",
            "legendFormat": "Gen-1 (Intermediate)",
            "refId": "B"
          },
          {
            "expr": "rate(auralis_gc_collections_total{generation='2'}[5m])",
            "legendFormat": "Gen-2 (Major)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Collections/sec", "show": true},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "auralis_active_connections",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"},
                {"value": 8, "color": "orange"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Phrase Generation Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "auralis_phrase_generation_rate_hz",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "hertz",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Memory Growth Rate (MB/hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(auralis_memory_usage_mb{type='rss'}[1h]) * 3600",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 20, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Buffer Depth (all clients)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "auralis_buffer_depth_ms",
            "legendFormat": "Client {{client_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Buffer Depth", "show": true},
          {"show": false}
        ],
        "thresholds": [
          {"value": 300, "colorMode": "critical", "op": "lt"}
        ]
      },
      {
        "id": 10,
        "title": "Success Criteria Summary",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(auralis_synthesis_latency_seconds_bucket[5m])) < 0.05",
            "legendFormat": "SC-001: 99% chunks <50ms",
            "refId": "A",
            "format": "table",
            "instant": true
          },
          {
            "expr": "avg_over_time(auralis_cpu_usage_percent[5m]) < 50",
            "legendFormat": "SC-003: CPU <50% avg",
            "refId": "B",
            "format": "table",
            "instant": true
          },
          {
            "expr": "rate(auralis_memory_usage_mb{type='rss'}[1h]) * 3600 < 10",
            "legendFormat": "SC-004: Memory growth <10MB/hr",
            "refId": "C",
            "format": "table",
            "instant": true
          },
          {
            "expr": "histogram_quantile(0.95, rate(auralis_synthesis_latency_seconds_bucket[5m])) < 0.02",
            "legendFormat": "SC-008: P95 jitter <20ms",
            "refId": "D",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~'.*Auralis.*'}",
          "iconColor": "red",
          "name": "Alerts",
          "tagKeys": "severity",
          "titleFormat": "Alert"
        }
      ]
    }
  }
}
